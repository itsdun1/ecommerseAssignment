
<% include partial/header.ejs %>


<div class="container">
    
    
    <div style="text-align:center">
        <h1> Add Products </h1>
    </div>
    <div style="width:30%;  margin:25px auto;">
<form  action="/addproducts" method="POST" enctype="multipart/form-data" >
    <div class="form-group">
        <input type="text" placeholder="name" name="name" class="form-control" required>
        
    </div>
<div class="form-group">
    <input type="number" placeholder="price" name="price" class="form-control" required>
    
</div>
<div class="form-group">
    <input type="text" placeholder="info about product" name="info" class="form-control"required> 
    
</div>

<div class="form-group">
    <input class="long" type='file' name='proimage' accept="image/*" required />
    
</div>



<input type="submit" class="btn btn-lg btn-primary btn-block">
    

</form>
<a href="/"> Go Back</a>
</div>
</div>
